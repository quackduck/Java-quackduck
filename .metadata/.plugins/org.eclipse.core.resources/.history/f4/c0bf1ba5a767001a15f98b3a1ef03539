
public class FindDuplicateInt {
	
	public static int[] thing0 = {0, 1, 2, 3, 3}; // sum: 9
	public static int[] thing1 = {0, 1, 2, 2, 3}; // sum: 8
	public static int[] thing2 = {0, 1, 1, 2, 3}; // sum: 7
	public static int[] thing3 = {0, 0, 1, 2, 3}; // sum: 6
	
	public static void main(String[] args) {
		System.out.println(new FindDuplicateInt().find(thing3));
	}
	
	public int find(int[] arr) {
		
		int result = 0;
		int expectedSum = 0;
		int actualSum = 0;
		for (int i = 0; i < arr.length; i++) {
			expectedSum += i;
			//System.out.println(expectedSum);
		}
		
		for (int i = 0; i < arr.length; i++) {
			actualSum += arr[i];
			//System.out.println(actualSum);
		}
		result = (arr.length - 1) - (expectedSum - actualSum);
		return result;
	}

}
